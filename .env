###############################################################################
# General
###############################################################################
LOG_LEVEL=INFO                                 # Logging level

###############################################################################
# GPU / Compute
###############################################################################
USE_GPU=auto                                  # auto | true | false

###############################################################################
# Embeddings
###############################################################################
EMBEDDING_MODEL=sentence_camembert             # sentence_camembert | drbert
EMBEDDING_BATCH_SIZE=32                        # Batch size for embeddings
EMBEDDING_NORMALIZE=true                       # L2 normalize embeddings

###############################################################################
# Segmentation
###############################################################################
WINDOW_SIZE_TOKENS=220                         # Sliding window size (tokens)
WINDOW_OVERLAP_TOKENS=60                       # Overlap between windows
MIN_CHARS_PER_SEGMENT=50                       # Min characters per segment

###############################################################################
# Similarity / Labeling
###############################################################################
TOP_K=5                                       # Top-k similar segments per query

THRESH_CRH=0.55                               # Threshold for CRH
THRESH_CRO=0.55                               # Threshold for CRO
THRESH_CRA=0.55                               # Threshold for CRA
THRESH_ORDONNANCE_EXAMEN=0.55                 # Threshold for exam prescriptions
THRESH_ORDONNANCE_MEDICAMENTS=0.55            # Threshold for medication prescriptions
THRESH_ANALYSE_LABO=0.55                      # Threshold for lab reports
THRESH_FICHE_PATIENT_ADMISSION=0.55           # Threshold for patient admission forms

###############################################################################
# Paths
###############################################################################
DATA_DIR=./data                               # Root data directory
LABELED_DIR=./data/labeled                    # Labeled documents
UNLABELED_DIR=./data/unlabeled                # Unlabeled documents
INTERIM_DIR=./data/interim                    # Temporary data
PROCESSED_DIR=./data/processed                # Processed data

ARTIFACTS_DIR=./artifacts                     # Artifacts root
LOGS_DIR=./logs                               # Logs directory
