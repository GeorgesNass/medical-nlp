## ============================================================
## Application settings
## ============================================================

## Application environment (dev / staging / prod)
APP_ENV=dev

## Application version
APP_VERSION=1.0.0

## ============================================================
## Logging configuration
## ============================================================

## Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

## Directory where log files are written
LOGS_DIR=logs

## ============================================================
## Data directories
## ============================================================

## Root data directory
DATA_DIR=data

## Raw MeSH files directory
RAW_MESH_DIR=data/raw/mesh

## Raw medical documents directory
RAW_MEDICAL_DOCS_DIR=data/raw/medical_docs

## Interim data directory
INTERIM_DIR=data/interim

## Processed data directory
PROCESSED_DIR=data/processed

## Outputs directory
OUTPUTS_DIR=data/outputs

## ============================================================
## MeSH artifacts
## ============================================================

## Parsed MeSH JSONL file
MESH_PARSED_FILE=data/interim/mesh_parsed.jsonl

## MeSH embeddings parquet file
MESH_EMBEDDINGS_FILE=data/interim/mesh_embeddings.parquet

## Documents embeddings parquet file
DOC_EMBEDDINGS_FILE=data/interim/doc_embeddings.parquet

## Extended MeSH JSON output
MESH_EXTENDED_JSON=data/outputs/mesh_extended.json

## Diff report markdown file
REPORT_DIFF_MD=data/outputs/report_diff.md

## ============================================================
## Embeddings configuration
## ============================================================

## Embedding backend (sentence_transformers | camembert_pooling | fasttext)
EMBEDDING_BACKEND=sentence_transformers

## Sentence-Transformers model name
ST_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

## CamemBERT model name
CAMEMBERT_MODEL_NAME=camembert-base

## Path to FastText binary model (required only if EMBEDDING_BACKEND=fasttext)
## Example (Windows): data/raw/fasttext/cc.fr.300.bin
FASTTEXT_MODEL_PATH=

## Embedding batch size
EMB_BATCH_SIZE=64

## Max token length for transformer models
EMB_MAX_LENGTH=256

## Device for embeddings (cpu or cuda)
EMB_DEVICE=cpu

## Optional: whether to L2-normalize embeddings (0/1)
EMB_NORMALIZE=0

## ============================================================
## API configuration
## ============================================================

## FastAPI host
API_HOST=0.0.0.0

## FastAPI port
API_PORT=8000

## Optional: auto-reload for local dev (0/1)
API_RELOAD=1

## Optional: number of workers (use 1 with reload)
API_WORKERS=1
