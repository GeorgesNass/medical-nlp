############################
# Project
############################
CLINICAL_NER_ROOT=.

############################
# Logging
############################
CLINICAL_NER_LOG_LEVEL=INFO

############################
# Runtime / Execution
############################
CLINICAL_NER_DEVICE=auto
CLINICAL_NER_SEED=42
CLINICAL_NER_MAX_DOCS=1000

############################
# Input handling
############################
CLINICAL_NER_ACCEPT_LABELED_DATA=true
CLINICAL_NER_ACCEPT_UNLABELED_TEXTS=true

############################
# NLP Features
############################
CLINICAL_NER_ENABLE_NEGATION=true
CLINICAL_NER_ENABLE_TEMPORALITY=true

############################
# Thresholds
############################
CLINICAL_NER_DICTIONARY_MIN_CONFIDENCE=0.7
CLINICAL_NER_MODEL_MIN_CONFIDENCE=0.5

############################
# Models
############################
CLINICAL_NER_HF_NER_MODEL=distilbert-base-multilingual-cased
CLINICAL_NER_SPACY_MODEL=<HERE_YOUR_SPACY_MODEL_NAME>

############################
# Dictionaries
############################
CLINICAL_NER_DICTIONARIES_SOURCE=mesh
CLINICAL_NER_DICTIONARIES_FUZZY=true
CLINICAL_NER_DICTIONARIES_FUZZY_MAX_DISTANCE=1
CLINICAL_NER_DICTIONARIES_USE_EMBEDDINGS=false
CLINICAL_NER_DICTIONARIES_EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

############################
# Docker / Paths (optional overrides)
############################
CLINICAL_NER_LOGS_DIR=<HERE_YOUR_LOGS_DIR>
CLINICAL_NER_EXPORTS_DIR=<HERE_YOUR_EXPORTS_DIR>
